enum MessageType {
  direct
  campaign
}

model Message {
  id        String @id @default(cuid())
  programId String
  partnerId String

  senderUserId    String
  senderPartnerId String? // Populated only if the sender is a partner

  type    MessageType @default(direct)
  subject String? // Only for Campaign
  text    String      @db.Text

  readInApp   DateTime?
  readInEmail DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  program       Program             @relation(fields: [programId], references: [id])
  partner       Partner             @relation(fields: [partnerId], references: [id])
  senderUser    User                @relation(fields: [senderUserId], references: [id])
  senderPartner Partner?            @relation("SenderPartner", fields: [senderPartnerId], references: [id])
  emails        NotificationEmail[]

  @@index([programId, partnerId])
  @@index(partnerId)
  @@index(senderPartnerId)
  @@index(senderUserId)
}
