model ActivityLog {
  id           String   @id @default(cuid())
  workspaceId  String
  programId    String
  resourceType String
  resourceId   String
  userId       String
  action       String
  description  String?  @db.Text
  changeSet    Json?
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([workspaceId, resourceType, resourceId])
}
