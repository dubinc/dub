{
  "extends": "../tsconfig/base.json",
  "include": [
    "src/**/*"
  ],
  "typeRoots": ["node_modules/@types", "src"],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "strict": true,
    "skipLibCheck": true
  }
}